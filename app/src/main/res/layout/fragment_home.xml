<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReStudy"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Layout quản lý admin -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/adminLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPackagesManager"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quản lý gói dịch vụ"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:backgroundTint="#00796B"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProductManager"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quản lý sản phẩm"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:backgroundTint="#00796B"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCategoryManager"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quản lý danh mục"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:backgroundTint="#00796B"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExerciseManager"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quản lý các gói đăng ký"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:backgroundTint="#00796B"
                app:cornerRadius="12dp" />

            <!-- Nút thống kê doanh thu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRevenueStats"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Thống kê doanh thu"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:backgroundTint="#00796B"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
