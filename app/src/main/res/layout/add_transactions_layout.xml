<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- User -->
        <TextView android:text="Người dùng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Package -->
        <TextView android:text="Gói dịch vụ"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Amount -->
        <TextView android:text="Số tiền"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số tiền"
            android:inputType="number" />

        <!-- Status -->
        <TextView android:text="Trạng thái"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Created At -->
        <TextView android:text="Thời gian"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy-MM-dd HH:mm"
            android:inputType="datetime" />

        <!-- Button -->
        <Button
            android:id="@+id/btnSaveTransaction"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu giao dịch" />

    </LinearLayout>
</ScrollView>
