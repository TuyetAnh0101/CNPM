<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📄 HÓA ĐƠN GIAO DỊCH"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="#000000"
            android:textAlignment="center" />

        <!-- CardView nội dung -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="false"
            android:focusable="false"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Thông tin người dùng -->
                <TextView
                    android:id="@+id/tvTransactionId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🆔 Mã giao dịch: #0001"
                    android:textSize="18sp"
                    android:textColor="#444"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Tên: "
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 Email: "
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvUserPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📞 Điện thoại: "
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="12dp" />

                <!-- Thông tin gói -->
                <TextView
                    android:id="@+id/tvPackageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📦 Gói: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvPostsLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📝 Bài đăng còn lại: "
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💰 Số tiền: "
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙ Trạng thái: "
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🕒 Ngày tạo: "
                    android:textSize="18sp"
                    android:paddingVertical="8dp" />

                <TextView
                    android:id="@+id/tvConfirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Đã xác nhận thanh toán lúc: "
                    android:textSize="18sp"
                    android:textColor="#333"
                    android:paddingVertical="8dp" />
                <!-- Ký tên -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="36dp"
                    android:gravity="center">

                    <!-- Người mua -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✍ Người mua"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:background="#E0E0E0"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:id="@+id/tvUserNameSign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Nguyễn Văn A)"
                            android:textSize="14sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Bên cung cấp -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏢 Bên cung cấp"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:background="#E0E0E0"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:id="@+id/tvProviderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Restudy.vn)"
                            android:textSize="14sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>
                <!-- Ngày xuất hóa đơn -->
                <TextView
                    android:id="@+id/tvInvoiceDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗓 Ngày xuất hóa đơn: "
                    android:textSize="16sp"
                    android:textColor="#888"
                    android:layout_marginTop="24dp"
                    android:textAlignment="center"
                    android:paddingVertical="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
