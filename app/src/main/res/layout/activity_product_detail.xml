<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/product_details"
    android:orientation="vertical"
    android:background="#ffffff">

    <!-- ViewPager ảnh sản phẩm -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/product_images_viewpager"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <!-- Thông tin sản phẩm trong ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bao da iPad Xoay 720°"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textStyle="bold" />

            <!-- Giá hiện tại -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫113.770"
                android:textColor="#FF5722"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="4dp" />



            <!-- Ưu đãi: Freeship, Voucher -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FREESHIP"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_rounded_red"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VOUCHER"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_rounded_blue"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Mô tả sản phẩm -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bao da xoay 720 độ, hỗ trợ nhiều dòng iPad, thiết kế sang trọng, dễ dàng tháo lắp và điều chỉnh góc nhìn."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Thanh dưới cùng: Thêm giỏ + Mua ngay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:elevation="8dp"
        android:padding="8dp">

        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Thêm vào giỏ"
            android:backgroundTint="#F2EEE6"
            android:textColor="#783A3A"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_buy_now"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Mua ngay"
            android:backgroundTint="#0E2B38"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
