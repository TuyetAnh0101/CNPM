<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_rounded_corners"
            android:contentDescription="Product Image" />

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:paddingTop="12dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Giá -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₫200,000"
            android:textSize="20sp"
            android:textColor="#FF5722"
            android:paddingTop="6dp"
            android:textStyle="bold" />

        <!-- Divider nhẹ -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="12dp" />

        <!-- Thông tin khác -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/product_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng trong kho: 100"
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/product_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Còn hàng"
                android:textSize="14sp"
                android:textColor="#555555"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh mục: Thời trang"
                android:textSize="14sp"
                android:textColor="#555555"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/product_createdAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày tạo: 01/01/2025"
                android:textSize="12sp"
                android:textColor="#999999"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/product_updatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật: 05/06/2025"
                android:textSize="12sp"
                android:textColor="#999999"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Mô tả sản phẩm -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm chi tiết tại đây..."
            android:textSize="15sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <!-- Nút Thêm vào giỏ hàng -->
        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Thêm vào giỏ hàng"
            android:textAllCaps="false"
            android:backgroundTint="#E4D9D5"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Nút Mua ngay -->
        <Button
            android:id="@+id/button_buy_now"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Mua ngay"
            android:textAllCaps="false"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
          />
    </LinearLayout>
</ScrollView>
