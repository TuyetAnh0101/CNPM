<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentCaNhanRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".UserFragment.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:layout_margin="16dp"
        android:clipToPadding="false">

        <!-- Nút Đăng nhập -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="gone"
            app:backgroundTint="#5465C1"
            app:cornerRadius="16dp"
            app:icon="@drawable/login2"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white" />

        <!-- Thông tin người dùng -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:clipToPadding="false"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📧 Email: example@email.com"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/tvUserSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤 Giới tính: Nam"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/tvUserPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📞 SĐT: 0123456789"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/tvUserRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎓 Vai trò: Người dùng"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/tvUserActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✅ Trạng thái: Đang hoạt động"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:paddingBottom="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nút Đăng xuất -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="gone"
            app:backgroundTint="#D05751"
            app:cornerRadius="16dp"
            app:icon="@drawable/logout"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white" />

    </LinearLayout>
</ScrollView>
