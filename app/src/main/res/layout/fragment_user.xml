<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentCaNhanRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    android:contentDescription="Thông tin cá nhân người dùng"
    tools:context=".UserFragment.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_margin="16dp"
        android:clipToPadding="false">

        <!-- Nút Đăng nhập (ẩn khi đã đăng nhập) -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            android:visibility="gone"
            android:layout_marginBottom="32dp" />

        <!-- Layout profile (ẩn khi chưa đăng nhập) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clipToPadding="false"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: example@email.com"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvUserSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính: Nam"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvUserPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại: 0123456789"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvUserRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vai trò: Người dùng"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvUserActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tình trạng: Đang hoạt động"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nút Đăng xuất -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
