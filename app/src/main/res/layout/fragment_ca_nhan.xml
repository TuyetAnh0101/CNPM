<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentCaNhanRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CaNhanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Nút Đăng nhập (ẩn khi đã đăng nhập) -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:visibility="gone" />

        <!-- Layout profile (ẩn khi chưa đăng nhập) -->
        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: example@email.com"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/tvUserSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính: Nam"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: 0123456789"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/tvUserRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai trò: Người dùng"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/tvUserActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng: Đang hoạt động"
                android:paddingBottom="6dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
