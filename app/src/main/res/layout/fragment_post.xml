<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng bài bán sản phẩm"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Ảnh sản phẩm (nhấn để chọn ảnh) -->
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/image_rounded_corners"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Ảnh sản phẩm"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <!-- Tên sản phẩm -->
        <EditText
            android:id="@+id/et_product_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tên sản phẩm"
            android:inputType="textPersonName"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:minHeight="48dp"
            android:background="@drawable/rounded_edittext"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Mô tả sản phẩm -->
        <EditText
            android:id="@+id/et_product_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Mô tả chi tiết sản phẩm"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="16dp"
            android:background="@drawable/rounded_edittext"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Giá sản phẩm -->
        <EditText
            android:id="@+id/et_product_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Giá sản phẩm (VND)"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:minHeight="48dp"
            android:background="@drawable/rounded_edittext"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Số lượng -->
        <EditText
            android:id="@+id/et_product_quantity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Số lượng"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:minHeight="48dp"
            android:background="@drawable/rounded_edittext"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Danh mục (Spinner) -->
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_edittext" />

        <!-- Nút Đăng bài -->
        <Button
            android:id="@+id/btn_post_product"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Đăng bài"
            android:textAllCaps="false"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:stateListAnimator="@null"
            />

    </LinearLayout>
</ScrollView>
